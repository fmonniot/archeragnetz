<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <services>
        
        <service id="fm_calendar.event.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%fm_calendar.event.form.name%</argument>
            <argument>%fm_calendar.event.form.type%</argument>
            <argument>null</argument>
        </service>
        
        <service id="fm_calendar.event.form.type" class="FM\CalendarBundle\Form\Type\EventType">
            <argument>%fm_calendar.event.class%</argument>
            <tag name="form.type" alias="fm_calendar_event_type" />
        </service>
        
	    <service id="fm_calendar.event.form.handler.default" class="FM\CalendarBundle\Form\Handler\EventFormHandler" scope="request" >
	        <argument type="service" id="fm_calendar.event.form" />
	        <argument type="service" id="request" />
	        <argument type="service" id="doctrine.orm.entity_manager" />
	    </service>
	    
    </services>
    
</container>