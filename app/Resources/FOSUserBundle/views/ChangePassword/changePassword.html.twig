{% extends "FOSUserBundle::layout.html.twig" %}

{% block subhead_title %}Modification du mot de passe{% endblock subhead_title %}

{% block container %}
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">

                <div class="row">
                    <div class="span6 offset3">
                        {{ form_row(form.current_password) }}
                    </div>
                </div>
                <div class="row">
                    <div class="span3 offset3">
                        {{ form_row(form.new.first) }}
                    </div>
                    <div class="span3">
                        {{ form_row(form.new) }}
                    </div>

                    {{ form_widget(form) }}
                </div>
                <div class="row">
                    <div class="form-actions span8 offset2">
                        <button type="submit" class="btn btn-primary" id="_submit" name="_submit">{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}</button>
                        <a href="{{ path('fos_user_profile_show') }}" class="btn">Annuler</a>
                    </div>
                </div>
            </form>
{% endblock container %}