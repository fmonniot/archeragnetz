<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div>
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        {% endif %}


        <div class="">
            <label class="" for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
            <input class="span12" type="text" id="username" name="username" />
        </div>

    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary" id="_submit" name="_submit">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
        <button type="reset" class="btn">Annuler</button>
    </div>
</form>
